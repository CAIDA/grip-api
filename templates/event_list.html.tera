{% extends "base" %}

{% block content %}
<!-- page content -->

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="dashboard_graph">
            <div class="x_panel">
                <div class="row x_title">
                    <div class="col-md-6">
                        <h2 id="table_title">Hijacking Events </h2>
                    </div>
                </div>
                <div class="col-md-12 pull-right">
                    <div class="col-lg-4 form-group pull-right top_search">
                        <div class="input-group">
                            <input id="search-box" type="text" class="form-control"
                                   placeholder="Search by prefix and ASN, separate by space...">
                            <span class="input-group-btn">
                              <button id="search-btn" class="btn btn-default" type="button">Go!</button>
                            </span>
                        </div>
                    </div>
                    <div class="form-group pull-right top_search">
                        <button id="range-btn" type="button" class="btn btn-default pull-right"
                                style="padding: 5px 10px; margin-left: 5px">
                            Filter
                        </button>
                        <div id="reportrange" class="pull-right"
                             style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc">
                            <i class="glyphicon glyphicon-calendar fa fa-calendar"></i>
                            <span></span> <b class="caret"></b>
                        </div>
                    </div>
                </div>
                <div class="x_content">
                    <table id="datatable" class="table table-striped table-bordered hover"
                           style="">
                    </table>
                </div>
            </div>

            <div class="x_panel">
                <div class="row x_title">
                    <div class="col-md-6">
                        <h2> Number of Potential Hijacking Events in the Past 24 Hours </h2>
                    </div>
                    <div class="x_content" id="stats-frame">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br/>

{% endblock content %}
